{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "built",
    "rootDir": "",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "backend/*",
    "frontend/*",
    "public/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules" /* exclude everything in node_modules */
  ]
}